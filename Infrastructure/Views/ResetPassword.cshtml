@using Application.DTO.Email.Letters
@model ResetPasswordLetterDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Email Confirmation</title>
    <style>
        body {
            font-family: "Tahoma", sans-serif;
            align-content: flex-start;
        }

        .container {
            max-width: 600px;
            min-height: 600px;
            margin: auto;
            padding: 20px;
            background: #f9f9f9;
        }

        .button {
            height: 50px;
            padding: 16px 24px;
            justify-content: center;
            align-items: center;
            font-size: .8rem;
            text-decoration: none;
            border: 1px solid #cacaca;
            border-radius: 25px;
            cursor: pointer;
            user-select: none;
        }

        .link {
            font-size: .5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Password Reset Request</h2>
        <p>Hello <b>@Model.UserName</b>!</p>
        <p>
            You recently requested to reset your password. Use the button below to set a new one:
        </p>
        <br />
        <a href="@Model.ResetPasswordLink" class="button">Set New Password</a>
        <br />
        <br />
        <p>
            If the button does not work, copy and paste the link into your browser:
            <br />
            <a href="@Model.ResetPasswordLink" class="link">@Model.ResetPasswordLink</a>
        </p>
        <p>
            <strong>This link expires in @Model.ExpiresInMinutes minutes.</strong> Request a new one if needed.
        </p>
        <p>Didn't request this? Ignore this email — no action required.</p>
        <p>Need help? Contact our support team.</p>
    </div>
</body>
</html>