@using Application.DTO.Email
@model ConfirmEmailDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Email Confirmation</title>
    <style>
        body {
            font-family: "Tahoma", sans-serif;
            align-content: flex-start;
        }

        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            background: #f9f9f9;
        }

        .username {
            font-weight: bold;
        }

        .button {
            height: 50px;
            padding: 0px 24px;
            justify-content: center;
            align-items: center;
            font-size: .8rem;
            text-decoration: none;
            border: 1px solid gray;
            border-radius: 25px;
            cursor: pointer;
            user-select: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Confirm Your Email Address</h2>
        <p>Thank you for registering, <div class="username">@Model.UserName</div>! Please click the button below to confirm your email:</p>
        <a href="@Model.ConfirmationLink" class="button">Confirm Email</a>
        <p></p>
        <p>If the button does not work, copy and paste the link into your browser:</p>
        <p>
            <a href="@Model.ConfirmationLink">@Model.ConfirmationLink</a>
        </p>
        <p>If you did not register, please ignore this email.</p>
    </div>
</body>
</html>