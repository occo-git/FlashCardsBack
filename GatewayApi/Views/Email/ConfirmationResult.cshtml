@using Application.DTO.Email
@model ConfirmEmailResponseDto

@{
    ViewData["Title"] = "Email Confirmation";
}

<h1>Email Confirmation</h1>

@if (@Model.Success)
{
    <div class="alert alert-success">
        <p>@Model.Message</p>
        <p>You can now <a href="@Model.LoginUrl">log in</a> to your account.</p>
    </div>
}
else
{
    <div class="alert alert-danger">
        <p>We're sorry, but the confirmation link is invalid or has expired.</p>
        <p>Please try to <a href="/resend-confirmation">resend the confirmation email</a> or contact support.</p>
    </div>
}
