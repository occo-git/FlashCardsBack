{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtValidationOptions": {
    "ValidateIssuer": false, // no need to validate issuer
    "ValidateAudience": false, // no need to validate audience
    "ValidateLifetime": true, // validate token lifetime
    "ValidateIssuerSigningKey": true // validate token signature
  },
  "ApiTokenOptions": {
    "AccessTokenExpiresMinutes": 15,
    "AccessTokenMinutesBeforeExpiration": 3,
    "RefreshTokenExpiresDays": 7,
    "RefreshTokenCleanupIntervalMinutes": 10
  }
}
