{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "AllowedHosts": "*",
  "JwtValidationOptions": {
    "ValidateIssuer": false, // no need to validate issuer
    "ValidateAudience": false, // no need to validate audience
    "ValidateLifetime": true, // validate token lifetime
    "ValidateIssuerSigningKey": true // validate token signature
  },
  "ApiTokenOptions": {
    "ConfirmationTokenExpiresMinutes": 30,
    "AccessTokenExpiresMinutes": 15,
    "AccessTokenBeforeExpirationMinutes": 3,
    "RefreshTokenExpiresDays": 7,
    "RefreshTokenCleanupIntervalMinutes": 10
  },
  "CacheServiceOptions": {
    "RefreshTokenTtlMinutes": 20,
    "RefreshTokenValidationTtlMinutes": 10,
    "UserTtlMinutes": 60,
    "WordsTtlMinutes": 360,
    "WordsSlideTimeMinutes": 30,
    "BookmarksTtlMinutes": 5,
    "BookmarksSlideTimeMinutes": 2,
    "CacheRefreshIntervalMinutes": 240
  }
}